BR2_x86_i686=y
BR2_GNU_HURD=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_BINUTILS_VERSION_2_35_X=y
BR2_GCC_VERSION_10_X=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_INIT_NONE=y
BR2_SYSTEM_BIN_SH_BASH=y
BR2_SYSTEM_ENABLE_NLS=y
BR2_TARGET_TZ_INFO=y
BR2_PACKAGE_PARTED=y
BR2_PACKAGE_NANO=y
# BR2_PACKAGE_BUSYBOX is not set
BR2_PACKAGE_COREUTILS=y
BR2_PACKAGE_COREUTILS_INDIVIDUAL_BINARIES=y
BR2_PACKAGE_PROCPS_NG=y
BR2_PACKAGE_DMIDECODE=y
BR2_PACKAGE_FINDUTILS=y
BR2_PACKAGE_GREP=y
BR2_PACKAGE_LESS=y
BR2_PACKAGE_LOGROTATE=y
BR2_PACKAGE_UTIL_LINUX_NOLOGIN=y
BR2_PACKAGE_SED=y
BR2_PACKAGE_LINUX_PAM=y

BR2_SHARED_STATIC_LIBS=y

BR2_ROOTFS_DEVICE_TABLE="board/qemu/hurd/system/device_table.txt"
BR2_ROOTFS_POST_FAKEROOT_SCRIPT="board/qemu/hurd/fakerooted-hurd-script.sh"

# Bootloader
BR2_TARGET_GRUB2=y
# Hurd needs some additional builtins
BR2_TARGET_GRUB2_BUILTIN_MODULES="boot extcmd loadenv  echo multiboot multiboot2 linux ext2 fat squash4 part_msdos part_gpt normal biosdisk probe"

# Filesystem / image
# only ext2 supported by hurd, we need to use 4096 blocksize to boot.
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_SIZE="1G"
BR2_TARGET_ROOTFS_EXT2_MKFS_OPTIONS="-v -O ^64bit  -b 4096 -o hurd  -O ext_attr"
# BR2_TARGET_ROOTFS_TAR is not set
BR2_ROOTFS_POST_BUILD_SCRIPT="board/qemu/hurd/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="support/scripts/genimage.sh"
BR2_ROOTFS_POST_SCRIPT_ARGS="-c board/qemu/hurd/genimage-bios.cfg"
BR2_ROOTFS_OVERLAY="board/qemu/hurd/rootfsoverlay"


BR2_PACKAGE_HOST_DOSFSTOOLS=y

# Required tools to create bootable media
BR2_PACKAGE_HOST_GENIMAGE=y
