config BR2_PACKAGE_ECONNMAN
	bool "econnman"
	select BR2_PACKAGE_EFL
	select BR2_PACKAGE_LIBELEMENTARY
	select BR2_PACKAGE_DBUS_PYTHON
	depends on BR2_INSTALL_LIBSTDCPP # efl
	depends on BR2_PACKAGE_HAS_UDEV # efl -> libudev
	depends on BR2_PACKAGE_PYTHON || BR2_PACKAGE_PYTHON3 # dbus-python
	depends on !BR2_STATIC_LIBS # libelementary
	depends on BR2_TOOLCHAIN_HAS_THREADS # efl
	depends on BR2_USE_MMU # efl
	depends on BR2_USE_WCHAR # efl
	help
	  ConnMan User Interface in EFL

	  https://phab.enlightenment.org/phame/live/3/post/python_efl_1_8_0/

comment "econnman needs a toolchain w/ C++, threads, wchar"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS || !BR2_USE_WCHAR
