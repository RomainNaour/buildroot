comment "libelementary needs a toolchain w/ C++, dynamic library, threads, wchar"
	depends on !BR2_INSTALL_LIBSTDCPP || BR2_STATIC_LIBS || !BR2_TOOLCHAIN_HAS_THREADS || !BR2_USE_WCHAR

config BR2_PACKAGE_LIBELEMENTARY
	bool "libelementary"
	select BR2_PACKAGE_EFL
	depends on BR2_INSTALL_LIBSTDCPP # efl
	depends on BR2_PACKAGE_HAS_UDEV # efl -> libudev
	depends on BR2_TOOLCHAIN_HAS_THREADS # efl
	depends on BR2_USE_MMU # efl
	depends on BR2_USE_WCHAR # efl
	depends on !BR2_STATIC_LIBS
	help
	  Elementary is a widget toolkit and EFL wrapper and convenience
	  library to make it easy to build applications and tools with UIs
	  with less code.

	  https://enlightenment.org
