config BR2_PACKAGE_LIBETROPHY
	bool "libetrophy"
	select BR2_PACKAGE_EFL
	select BR2_PACKAGE_LIBELEMENTARY
	depends on BR2_INSTALL_LIBSTDCPP # efl
	depends on BR2_PACKAGE_HAS_UDEV # efl -> libudev
	depends on BR2_TOOLCHAIN_USES_GLIBC # efl
	depends on BR2_USE_MMU # efl
	help
	  Etrophy is a library that manages scores, trophies and
	  unlockables. It will store them and provide views to display
	  them. Could be used by games based on EFL.

comment "libetrophy needs udev /dev management and a (e)glibc toolchain w/ C++"
	depends on !BR2_PACKAGE_HAS_UDEV || !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_USES_GLIBC
	depends on BR2_USE_MMU
